  <path id="library.javafx-jmods-22.0.classpath">
    <fileset dir="${basedir}/../../../../Program Files/Java/javafx-jmods-22.0.2">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="library.javafx-sdk-21.0.classpath"/>
  
  <path id="library.lib.classpath">
    <fileset dir="${basedir}/../javafx-sdk-21.0.4/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="library.mysql-connector-j-9.0.0.classpath">
    <pathelement location="${basedir}/../mysql-connector-j-9.0.0/mysql-connector-j-9.0.0.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
      <include name="forms_rt.jar"/>
    </fileset>
    <fileset dir="${idea.home}/plugins/java/lib">
      <include name="javac2.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_todolistapp.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.todolistapp" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.todolistapp" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.todolistapp:jar" value="${basedir}/out/artifacts/ToDoListApp_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.ToDoListApp.jar" value="${artifacts.temp.dir}/ToDoListApp.jar"/>
  </target>
  
  <target name="artifact.todolistapp:jar" depends="init.artifacts, compile.module.todolistapp" description="Build &#39;ToDoListApp:jar&#39; artifact">
    <property name="artifact.temp.output.todolistapp:jar" value="${artifacts.temp.dir}/ToDoListApp_jar"/>
    <mkdir dir="${artifact.temp.output.todolistapp:jar}"/>
    <jar destfile="${temp.jar.path.ToDoListApp.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${todolistapp.output.dir}"/>
      <zipfileset src="${basedir}/../../Downloads/kotlin-stdlib-2.0.0.jar"/>
      <zipfileset src="${basedir}/../javafx-sdk-21.0.4/lib/javafx-swt.jar"/>
      <zipfileset src="${basedir}/../javafx-sdk-21.0.4/lib/javafx.web.jar"/>
      <zipfileset src="${basedir}/../javafx-sdk-21.0.4/lib/javafx.base.jar"/>
      <zipfileset src="${basedir}/../javafx-sdk-21.0.4/lib/javafx.fxml.jar"/>
      <zipfileset src="${basedir}/../javafx-sdk-21.0.4/lib/javafx.media.jar"/>
      <zipfileset src="${basedir}/../javafx-sdk-21.0.4/lib/javafx.swing.jar"/>
      <zipfileset src="${basedir}/../javafx-sdk-21.0.4/lib/javafx.controls.jar"/>
      <zipfileset src="${basedir}/../javafx-sdk-21.0.4/lib/javafx.graphics.jar"/>
      <zipfileset src="${basedir}/../../Downloads/java-dotenv-5.2.2.jar"/>
    </jar>
    <copy file="${temp.jar.path.ToDoListApp.jar}" tofile="${artifact.temp.output.todolistapp:jar}/ToDoListApp.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.todolistapp:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.todolistapp:jar}"/>
    <copy todir="${artifact.output.todolistapp:jar}">
      <fileset dir="${artifact.temp.output.todolistapp:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>